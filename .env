# =====================================================
# DATABASE CONFIGURATION
# =====================================================
DB_SERVER=localhost
DB_PORT=1433
DB_USER=root
DB_PASSWORD=root
DB_NAME=MRA_InvoiceDB
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_REQUEST_TIMEOUT=30000

# =====================================================
# SERVER CONFIGURATION
# =====================================================
SERVER_PORT=5000
NODE_ENV=development
APP_NAME=MRA Invoice System
APP_VERSION=1.2.0

# =====================================================
# PROCESSOR CONFIGURATION
# =====================================================
# Processor interval in milliseconds (default: 30000 = 30 seconds)
# Examples:
#   30000 = 30 seconds
#   60000 = 1 minute
#   300000 = 5 minutes
PROCESSOR_INTERVAL_MS=30000

# =====================================================
# LOGGING CONFIGURATION
# =====================================================
# Log directory (default: ./Logs)
LOG_DIR=./Logs
# Log level: debug, info, warn, error
LOG_LEVEL=info
# Log viewer port (default: 5001)
LOG_VIEWER_PORT=5001

# Number of invoices to process per batch run
# Helps manage load during high transaction volumes
PROCESSOR_BATCH_SIZE=10

# =====================================================
# MRA API CONFIGURATION
# =====================================================
MRA_API_BASE_URL=https://dev-eis-api.mra.mw/api/v1
MRA_API_TIMEOUT=30000
MRA_API_RETRY_ATTEMPTS=5
MRA_API_RETRY_DELAY=1500

# =====================================================
# JWT CONFIGURATION
# =====================================================
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# =====================================================
# TERMINAL CONFIGURATION
# =====================================================
TERMINAL_STORAGE_PATH=./data/terminal-creds.json
TERMINAL_ACTIVATION_TIMEOUT=300000


# =====================================================
# SECURITY CONFIGURATION
# =====================================================
CORS_ORIGIN=*
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# FILE UPLOAD CONFIGURATION
# =====================================================
MAX_UPLOAD_SIZE=10mb
UPLOAD_TEMP_DIR=./uploads/temp

# =====================================================
# EMAIL CONFIGURATION (Optional)
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@mra-invoice-system.com

# =====================================================
# CACHE CONFIGURATION (Optional)
# =====================================================
CACHE_TTL=3600
CACHE_ENABLED=true

# =====================================================
# FEATURE FLAGS
# =====================================================
FEATURE_OFFLINE_INVOICES=true
FEATURE_BATCH_PROCESSING=true
FEATURE_EMAIL_NOTIFICATIONS=false